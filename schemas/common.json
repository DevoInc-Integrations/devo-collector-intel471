{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "$ref": "#/definitions/Common",
    "definitions": {
        "Common": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "id": {
                    "type": "string",
                    "pattern": "^[0-9]{5,}$"
                },
                "enabled": {
                    "type": "boolean"
                },
                "credentials": {
                    "$ref": "#/definitions/Credentials"
                },
                "requests_limits": {
                    "$ref": "#/definitions/RequestsLimits"
                },
                "environment": {
                    "type": "string"
                }
            },
            "required": [
                "credentials",
                "enabled",
                "id"
            ],
            "title": "Common"
        },
        "Credentials": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "username": {
                    "type": "string",
                    "format": "uuid"
                },
                "password": {
                    "type": "integer",
                    "minLength": 1
                }
            },
            "required": [
                "username",
                "password"
            ],
            "title": "Credentials"
        },
        "RequestsLimits": {
            "type": "array",
            "additionalProperties": false,
            "required": [
                "period",
                "number_of_requests"
            ],
            "properties": {
                "period": {
                    "type": "string",
                    "pattern": "^\\d+[s,m,h,d,w,M,y]$"
                },
                "number_of_requests": {
                    "anyOf": [
                        {
                            "type": "integer",
                            "minimum": 1,
                            "maximum": 9999999
                        },
                        {
                            "type": "integer",
                            "const": -1
                        }
                    ]
                }
            }
        }
    }
}